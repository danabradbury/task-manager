    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
            "args": [
                "offline",
                "--noTimeout",
                "--stage",
                "dev",
                "--region",
                "us-east-2"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "SLS_API_KEY": "benk-apikey",
                "SLS_DEBUG": "*",
                "ENVIRONMENT": "dev",
                "REGION": "us-east-2",
                "IS_OFFLINE": "true"
            }
        }
    ]
}